<!-- edit.html.erb -->



<div class="row">
	<div class="col-md-5">
<%= simple_form_for @photo, html: {class: "form-horizontal"} do |form| %>
	<%= form.input :filename, label: "Photo File" %>
	<%= form.input :caption %>
	<%= form.submit "Upload Photo", class: "btn btn-primary" %>
<% end %>
	</div>

	<div class="col-md-7">
	<%= image_tag @photo.filename, size: "300x300" %>
	</div>
</div>